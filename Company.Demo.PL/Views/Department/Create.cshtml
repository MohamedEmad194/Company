@model Company.Demo.PL.ViewModels.Departments.DepartmentViewModel
@{
    ViewData["Title"] = "Create";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<h1>Create New Department</h1>
<br />
<br />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Code" class="col-form-label"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="DateOfCreation" class="col-form-label"></label>
            <input asp-for="DateOfCreation" class="form-control" />
        </div>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}