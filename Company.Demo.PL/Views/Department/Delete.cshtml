@model Company.Demo.PL.ViewModels.Departments.DepartmentViewModel
@{
    ViewData["Title"] = "Delete";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<h1>Are You Sure You Want To Delete This Department</h1>
<br />
<br />

<form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input readonly asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input readonly asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input readonly asp-for="DateOfCreation" class="form-control" />
    </div>





    <br />
    <br />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
</form>
