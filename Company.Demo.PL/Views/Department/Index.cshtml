
@model Company.Demo.BLL.PagedResult<Company.Demo.DAL.Models.Department>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<h1>All Departments</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row align-items-center">
        <div class="col-md-8 mb-2 mb-md-0">
            <input type="text" name="search" value="@Model.SearchQuery" class="form-control" placeholder="Search by name..." />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-success w-100">Search</button>
        </div>
    </div>
</form>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary">Create New Department</a>
}
<br />
<br />
@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortField="Name" asp-route-sortAsc="@(Model.SortField == "Name" ? !Model.SortAscending : true)" asp-route-search="@Model.SearchQuery">@Html.DisplayNameFor(m => m.Items.First().Name)</a>
                        @(Model.SortField == "Name" ? (Model.SortAscending ? "▲" : "▼") : "")
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortField="Code" asp-route-sortAsc="@(Model.SortField == "Code" ? !Model.SortAscending : true)" asp-route-search="@Model.SearchQuery">@Html.DisplayNameFor(m => m.Items.First().Code)</a>
                        @(Model.SortField == "Code" ? (Model.SortAscending ? "▲" : "▼") : "")
                    </th>
                    <th>@Html.DisplayNameFor(m => m.Items.First().DateOfCreation)</th>
                    <th>Details</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Update</th>
                        <th>Delete</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.Items)
                {
                    <tr>
                        <td>@department.Name</td>
                        <td>@department.Code</td>
                        <td>@department.DateOfCreation</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                                <i class="fas fa-eye"></i> Details
                            </a>
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-sortField="@Model.SortField" asp-route-sortAsc="@Model.SortAscending" asp-route-search="@Model.SearchQuery">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-sortField="@Model.SortField" asp-route-sortAsc="@Model.SortAscending" asp-route-search="@Model.SearchQuery">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-sortField="@Model.SortField" asp-route-sortAsc="@Model.SortAscending" asp-route-search="@Model.SearchQuery">Next</a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Department :(</h4>
    </div>
}

