@model Company.Demo.PL.ViewModels.Departments.DepartmentButtonViewModel

<td>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-eye"></i> Details
    </a>
</td>
<td>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
        <i class="fas fa-edit"></i> Update
    </a>
</td>
<td>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
        <i class="fas fa-trash"></i> Delete
    </a>
</td>